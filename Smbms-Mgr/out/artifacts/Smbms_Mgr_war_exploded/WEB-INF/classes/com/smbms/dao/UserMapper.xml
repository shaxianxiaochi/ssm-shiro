<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smbms.dao.UserMapper">
    <select id="getUserListByObj" parameterType="User" resultType="User">
      SELECT * FROM smbms_user
      <include refid="user_where"/>
    </select>

    <sql id="user_where">
        <trim prefix="WHERE" prefixOverrides="AND | OR">
            <if test="id != null and id != ''"> AND id = #{id}</if>
            <if test="userCode != null"> AND userCode LIKE CONCAT('%',#{userCode},'%')</if>
            <if test="userName != null"> AND userName LIKE CONCAT('%',#{userName},'%')</if>
            <if test="userPassword != null and userPassword != ''"> AND userPassword = #{userPassword}</if>
            <if test="gender != null and gender != ''"> AND gender = #{gender}</if>
            <if test="birthday != null and birthday != ''"> AND birthday = #{birthday}</if>
            <if test="phone != null and phone != ''"> AND phone = #{phone}</if>
            <if test="address != null"> AND address LIKE CONCAT('%',#{address},'%')</if>
            <if test="createdBy != null and createdBy != ''"> AND createdBy = #{createdBy}</if>
            <if test="creationDate != null and creationDate != ''"> AND creationDate = #{creationDate}</if>
            <if test="modifyBy != null and modifyBy != ''"> AND modifyBy = #{modifyBy}</if>
            <if test="modifyDate != null and modifyDate != ''"> AND modifyDate = #{modifyDate}</if>
        </trim>
    </sql>
</mapper>
